			<fx:Object label="GoUpper" icon="@Embed('../images/componentIcons/upper.png')"/>
			<fx:Object label="GoLower" icon="@Embed('../images/componentIcons/lower.png')"/>
			<fx:Object label="GoHands" icon="@Embed('../images/componentIcons/hand.png')"/>
